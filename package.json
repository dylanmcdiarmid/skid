{
  "name": "sked",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:js": "NODE_ENV=development rspack build --watch",
    "build:js:prod": "NODE_ENV=production rspack build",
    "build:css": "sh scripts/build-css-with-notify.sh dev --watch",
    "build:css:prod": "sh scripts/build-css.sh prod",
    "build:migration": "migrate create -ext=.sql -dir=internal/db/migrations -seq -digits=1",
    "dev:client": "concurrently --prefix \"[{name}]\" --prefix-colors \"blue,green\" -n js,css \"bun run build:js\" \"bun run build:css\"",
    "dev:server": "bun run --watch src/index.ts",
    "dev:all": "concurrently --prefix \"[{name}]\" --prefix-colors \"cyan,magenta\" -n client,server \"bun run dev:client\" \"bun run dev:server\"",
    "build": "tsc -b && bun run build:css:prod && bun run build:js:prod",
    "lint": "ultracite check",
    "build:tests": "rspack build --config rspack.config.test.mjs",
    "test": "sh scripts/test-wrapper.sh",
    "test:browser": "sh scripts/test-browser-wrapper.sh",
    "clean": "rm -rf node_modules bun.lockb bun.lock",
    "format": "ultracite fix && go fmt $(go list ./... | grep -v '/gen/')"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "@tanstack/react-router": "^1.95.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elysia": "^1.4.16",
    "jotai": "^2.8.0",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@biomejs/biome": "2.2.2",
    "@eslint/js": "^9.33.0",
    "@postgrestools/postgrestools": "^0.15.1",
    "@rspack/cli": "^1.1.7",
    "@rspack/core": "^1.1.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.1",
    "@types/qunit": "^2.19.12",
    "@types/qunit-dom": "^0.7.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^25.0.1",
    "node-qunit-puppeteer": "^2.2.1",
    "qunit": "^2.22.0",
    "qunit-dom": "^3.5.0",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "ultracite": "5.3.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "trustedDependencies": [
    "@swc/core",
    "@tailwindcss/oxide",
    "esbuild",
    "puppeteer"
  ]
}
